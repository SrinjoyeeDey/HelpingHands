<%- include("partials/header") %>

<body class="bg-light">
    <div class="container mt-1">
    <div class="card shadow-sm p-4 rounded-4">
    <h2 class="mb-4 text-center text-success">Volunteer registration</h2>

    <form class="row g-3" action="/volunteer" method="POST">

  <div class="row mb-3">
  <div class="col-md-6">
    <label  class="form-label">First Name</label>
    <input type="text" class="form-control" required />
  </div>

  <div class="col-md-6">
    <label class="form-label">Last Name</label>
    <input type="text" class="form-control" required />
  </div>
  </div>

  <div class="row mb-3">
  <div class="col-md-6">
    <label  class="form-label">Email</label>
    <input type="email" class="form-control" required />
  </div>

  <div class="col-md-6">
    <label class="form-label">Phone Number</label>
    <input type="password" class="form-control" required />
  </div>
  </div>

  <div class="mb-3">
    <label class="form-label">Team / Organisation</label>
    <input type="text" class="form-control"  placeholder="1234 Main St">
  </div>

  <div class="row mb-3">
  <div class="col-md-6">
    <label class="form-label">Availability (days/weeks)</label>
    <input type="number" name="availability" class="form-control" />
  </div>

  <div class="col-md-6">
    <label class="form-label">Area of Interest</label>
    <select id="inputState" class="form-select">
      <option selected>Choose...</option>
      <option>Relief</option>
      <option>Medical</option>
      <option>Logistics</option>
      <option>Bihar</option>
      <option>Fundraising</option>
    </select>
  </div>
  </div>
    
<div class="mb-3">
    <label>Location</label>
    <input type="text" name="location" class="form-control">
</div>

  </div>
  <div class="col-md-6 mt-3 mt-md-6">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="policyCheck">
      <label class="form-check-label" for="policyCheck">
        I agree to the terms and privacy policy
      </label>
    </div>
  </div>
  </div>
  <div class="text-center mb-4">
    <button type="submit" class="btn btn-success px-5">Submit</button>
 </div>
</form>
</div>
</div>

<%- include("partials/footer") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

</body>
</html>
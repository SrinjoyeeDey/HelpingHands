<%- include("partials/header") %>

<div class="container mt-2">
    <div class="card shadow-sm p-4 rounded-4">
    <h2 class="mb-4 text-center" style="color: #d39e00;">Registered Users</h2>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>

    <tbody>
        <% users.forEach(user =>{ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role%></td>

                <td><form method="POST" action="/admin/users/<%= user._id %>?_method=DELETE"  onsubmit="return confirm('Are you aure you want to delete this user?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button></form>
                    </td>
            </tr> 
       <% }) %>
    </tbody>
    </table>
</div>
</div>

<%- include("partials/footer") %>